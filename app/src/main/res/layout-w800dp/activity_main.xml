<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/section_header"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="@string/borrowed" />

        <fragment
            android:id="@+id/fragment1"
            android:name="de.raphaelmichel.lendlist.frontend.ItemsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="mainpager:1"
            tools:layout="@layout/fragment_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/section_header"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="@string/lent" />

        <fragment
            android:id="@+id/fragment2"
            android:name="de.raphaelmichel.lendlist.frontend.ItemsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="mainpager:2"
            tools:layout="@layout/fragment_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/section_header"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="@string/persons" />

        <fragment
            android:id="@+id/fragment01"
            android:name="de.raphaelmichel.lendlist.frontend.PersonsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="mainpager:3"
            tools:layout="@layout/fragment_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/section_header"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="@string/categories" />

        <fragment
            android:id="@+id/fragmentCat"
            android:name="de.raphaelmichel.lendlist.frontend.CategoriesFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="mainpager:0"
            tools:layout="@layout/fragment_main" />
    </LinearLayout>

</LinearLayout>